
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Zero configuration table -->
<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Trang quản lý ngành</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <button id="addRow" class="btn btn-primary mb-2" onclick="PopupForm('@Url.Action("AddOrEdit", "Major")')"><i class="ft-plus"></i>&nbsp; Thêm ngành mới</button>
                        <table class="table table-striped table-bordered zero-configuration" id="tblMajor" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Mã ngành</th>
                                    <th>Tên ngành</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th>Mã ND</th>
                                    <th>Tên ngành</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Zero configuration table -->


<link href="~/app-assets/vendors/css/tables/datatable/datatables.min.css" rel="stylesheet" />
<link href="~/app-assets/vendors/css/tables/datatable/responsive.dataTables.min.css" rel="stylesheet" />

@section scripts {

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.11.2/moment.min.js"></script>
    <script src="~/app-assets/vendors/js/datatable/datatables.min.js"></script>
    <script src="~/app-assets/vendors/js/datatable/dataTables.responsive.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.12/sorting/datetime-moment.js"></script>

    <script type="text/javascript">

        var popup, datatable;
        $(document).ready(function () {
            $('#tblMajor').DataTable(
                {
                    ajax: {
                        type: "GET",
                        url: "@Url.Action("GetData", "Major")",
                        dataType: "json",
                    },

                    columns: [
                        { 'data': 'id' },
                        { 'data': 'name' }
                    ],

                    language: {

                        'emptyTable': "Chưa có ngành học, vui lòng chọn <b>Thêm ngành mới</b>"

                    },

                    responsive: true,
                    LengthChange: true,
                    @*lengthMenu: [[5, 10, -1], [5, 10, "All"]],*@
                    Filter: true,
                    Sort: true,
                    Paginate: true,

                });
        });

        function PopupForm(url) {
            var formDiv = $('<div/>')
            $.get(url)
            .done(function (response) {
                formDiv.html(response);

                popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: true,
                    title: 'Thêm ngành học mới',
                    height: 330,
                    width: 700,
                    close: function () {
                        popup.dialog('destroy').remove();
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success)
                        {
                            popup.dialog('close');
                            $('#tblMajor').DataTable().ajax.reload();

                            // Show message when create succeeded
                            toastr.success('Tạo khoá mới thành công!');

                        }
                    }
                });
            }        
            return false;
        }

    </script>
}



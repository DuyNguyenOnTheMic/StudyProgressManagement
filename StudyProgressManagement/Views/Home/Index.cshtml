
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>

<div class="row">
    <div class="col-sm-12">
        <h2 class="content-header">Trang chủ</h2>
    </div>
</div>

<!-- Input Validation start -->
<section class="input-validation">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    @if (User.IsInRole("Faculty"))
                    {
                        <h4 class="card-title mt-4 ml-4">Chào <span class="text-primary">@User.Identity.Name</span>,<br />Chọn mục để quản lý ở thanh tác vụ bên trái</h4>
                    }
                    else
                    {
                        <h4 class="card-title mt-4 ml-4">Chào <span class="text-primary">@User.Identity.Name</span>,<br />Chúc bạn có một ngày tốt lành</h4>
                    }
                </div>
                <div class="card-body" style="margin-top: -2.25rem">
                    <div class="card-block">
                        <img class="mx-auto d-block w-50" alt="Welcome" src="~/assets/images/img_welcome.svg"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Input Validation end -->

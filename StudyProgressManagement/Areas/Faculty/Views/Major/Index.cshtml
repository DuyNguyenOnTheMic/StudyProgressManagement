
@{
    ViewBag.Title = "Quản lý ngành học";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title>@ViewBag.Title</title>

<!-- Zero configuration table -->
<section id="configuration">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="card-title-wrap bar-success">
                        <h4 class="card-title">Trang quản lý ngành</h4>
                    </div>
                </div>
                <div class="card-body collapse show">
                    <div class="card-block card-dashboard">
                        <button id="addRow" class="btn btn-primary mb-2" onclick="PopupForm('@Url.Action("AddOrEdit", "Major")')"><i class="ft-plus"></i>&nbsp; Thêm ngành mới</button>
                        <table class="table table-striped table-bordered zero-configuration" id="tblMajor" cellspacing="0" width="100%">
                            <thead>
                                <tr>
                                    <th>Mã ngành</th>
                                    <th>Ngành học</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                            <tfoot>
                                <tr>
                                    <th>Mã ngành</th>
                                    <th>Ngành học</th>
                                    <th></th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Zero configuration table -->

<link href="~/app-assets/vendors/css/tables/datatable/datatables.min.css" rel="stylesheet" />
<link href="~/app-assets/vendors/css/tables/datatable/responsive.dataTables.min.css" rel="stylesheet" />
<link href="~/app-assets/vendors/css/sweetalert2.min.css" rel="stylesheet" />

@section scripts {

    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/app-assets/vendors/js/moment.min.js"></script>
    <script src="~/app-assets/vendors/js/datatable/datatables.min.js"></script>
    <script src="~/app-assets/vendors/js/datatable/dataTables.responsive.min.js"></script>
    <script src="~/app-assets/vendors/js/datetime-moment.js"></script>
    <script src="~/app-assets/vendors/js/sweetalert2@11.js"></script>
    <script src="~/app-assets/vendors/js/sweetalert2.min.js"></script>
    <script src="~/app-assets/js/sweet-alerts.js"></script>


    <script type="text/javascript">

        var popup, dataTable;
        $(document).ready(function () {

            // Populate Major datatable
            dataTable = $('#tblMajor').DataTable(
                {
                     ajax: {
                        dataSrc: "",
                        type: "POST",
                        url: "@Url.Action("GetData", "Major")",
                        dataType: "json",
                    },
                    columnDefs: [
                        {
                            targets: [2],
                            className: "text-center"
                        },
                    ],
                    columns: [
                        { 'data': 'id' },
                        { 'data': 'name' },
                        {
                            'data': 'id', 'render': function (data)
                            {
                                return "<a class='success p - 0' data-original-title='' title='' id='editRow' onclick=PopupForm('@Url.Action("AddOrEdit","Major")/" + data + "')><i class='fa fa-pencil font-medium-3 mr-2'></i></a> <a class='danger p-0' style='margin-left:5px' data-original-title='' title='' id='deleteRow' onclick=Delete(" + data + ")><i class='fa fa-trash-o font-medium-3 mr-2'></i></a>";
                            },
                            orderable: false,
                            searchable: false,
                            width: "100px"
                        }
                    ],
                    language: {

                        'emptyTable': "Chưa có ngành học, vui lòng chọn <b>Thêm ngành mới</b>",
                        'sZeroRecords': "Không có kết quả <i class='ft-help-circle' style='vertical-align:middle'></i>"

                    },
                    responsive: true,
                    LengthChange: true,
                    Filter: true,
                    Sort: true,
                    Paginate: true,

                });
        });

        // Show Create and Edit form
        function PopupForm(url) {
            var formDiv = $('<div/>')
            $.get(url)
            .done(function (response) {
                formDiv.html(response);

                popup = formDiv.dialog({
                    autoOpen: true,
                    resizable: true,
                    title: 'Quản lý ngành học',
                    height: 290,
                    width: 700,
                    open: function () {
                        // Prevent user from add edit delete while dialog is populated
                        $("#addRow").prop('disabled', true);
                        $('#editRow').each(function () {
                            this.style.pointerEvents = 'none';
                        });
                        $('#deleteRow').each(function () {
                            this.style.pointerEvents = 'none';
                        });

                    },
                    close: function () {
                        popup.dialog('destroy').remove();

                        // Re-enable buttons when user closes the dialog
                        $("#addRow").prop('disabled', false);
                        $('#editRow').each(function () {
                            this.style.pointerEvents = 'auto';
                        });
                        $('#deleteRow').each(function () {
                            this.style.pointerEvents = 'auto';
                        }); 
                    }
                });
            });
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);

            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.success)
                        {
                            popup.dialog('close');
                            dataTable.ajax.reload();

                            // Show message when create or edit succeeded
                            toastr.options.positionClass = 'toast-bottom-right';
                            toastr.success(data.message);

                        }
                    }
                });
            }
            return false;
        }

        function Delete(id) {
            swal({
                title: 'Thông báo',
                text: "Bạn có chắc muốn xoá ngành này?",
                type: 'warning',
                showCancelButton: true,
                cancelButtonText: 'Huỷ',
                confirmButtonText: 'Xoá',

            }).then(function () {
                // Delete item
                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("Delete", "Major")/' + id,
                    success: function (data) {
                        if (data.success) {
                            dataTable.ajax.reload();

                            // Show message when delete succeeded
                            toastr.options.positionClass = 'toast-bottom-right';
                            toastr.success(data.message);
                        }
                    }

                });

            }, function (dismiss) {
                if (dismiss === 'cancel' || dismiss === 'close') {
                    // Ignore
                }
            })
        }

    </script>
}



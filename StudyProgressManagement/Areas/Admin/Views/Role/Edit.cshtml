@model StudyProgressManagement.Models.AspNetUser

@{
    Layout = null;
}

@using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.Id)

    <label>Ngành: </label>
    <div class="form-group">
        @Html.DropDownList("role_id", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
    </div>

    <div class="form-actions right">
        <button type="submit" class="btn btn-success">
            <i class="icon-note"></i> Lưu
        </button>
    </div>
}